@model IEnumerable<MDS.Web.Models.Vendors.CourseVendor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "VendorCourses", FormMethod.Get))
    {
        <div class="input-group">
            <span class="input-group-btn">
                <input class="btn btn-primary" type="submit" value="search" />
            </span>
            @Html.TextBox("search", null, new { @class = "form-control" })
        </div>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WhealsType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorPrice)
        </th>

        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6" class="bg-danger">No records found!</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhealsType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VendorCourseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.VendorCourseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VendorCourseId })
            </td>
        </tr>
        }
    }
    </table>
